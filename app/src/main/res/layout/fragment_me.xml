<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/mainBackGround"
              android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--Top部分-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/orange">
                <ImageButton
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/me_person_set"/>
                <ImageButton
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:src="@mipmap/me_change_info"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="OPPO账号:157******81"
                    android:textColor="@color/white"
                    android:textSize="14dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="粉丝: 0"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="关注: 0 "
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="被喜欢: 0 "
                        android:textColor="@color/white"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/me_distance_select"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/me_shopping_car"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="购物车"/>
                <View android:layout_width="1dp"
                      android:layout_height="40dp"
                      android:layout_marginTop="10dp"
                      android:background="@color/mainBackGround"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/me_order_img"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="订单"/>
                <View android:layout_width="1dp"
                      android:layout_height="40dp"
                      android:layout_marginTop="10dp"
                      android:background="@color/mainBackGround"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/me_message_img"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="消息"/>
            </LinearLayout>
            <app.m15.cn.goshopping.view.MeSelectView
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_marginTop="@dimen/me_distance_select"
                android:layout_height="60dp"
                app:icon="@mipmap/me_love_icon"
                app:viewText="喜欢的宝贝"
                app:viewTextSize="18dp"/>
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
            android:layout_marginLeft="50dp"/>
            <app.m15.cn.goshopping.view.MeSelectView
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="60dp"
                app:icon="@mipmap/me_address_icon"
                app:viewText="收货地址管理"
                app:viewTextSize="18dp"/>


            <app.m15.cn.goshopping.view.MeSelectView
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/me_distance_select"
                app:icon="@mipmap/me_card_icon"
                app:viewText="我的帖子"
                app:viewTextSize="18dp" android:id="@+id/meSelectView"/>

            <app.m15.cn.goshopping.view.MeSelectView
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_marginTop="@dimen/me_distance_select"
                android:layout_height="60dp"
                app:icon="@mipmap/me_shop_forum_icon"
                app:viewText="购物论坛"
                app:viewTextSize="18dp"/>
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@android:color/darker_gray"/>
            <app.m15.cn.goshopping.view.MeSelectView
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="60dp"
                app:icon="@mipmap/me_help"
                app:viewText="帮助与反馈"
                app:viewTextSize="18dp"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
